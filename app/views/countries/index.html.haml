- content_for :title, 'List countries'
- content_for :breadcrumb, 'Countries'
.page-header
  %h1 Listing countries
  = link_to new_country_path, :class => "btn btn-success" do
    %i.icon-plus
    New country
- if @countries.empty?
  %p You don't have any countries yet.
- else 
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th
    %tbody
      - @countries.each do |country|
        %tr
          %td= country.name
          %td= table_commands country, edit_country_path(country), 1
