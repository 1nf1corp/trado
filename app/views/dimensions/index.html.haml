.page-header
  %h1 Listing dimensions

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th Weight
      %th Length
      %th Thickness
      %th Actions
  %tbody
    - @dimensions.each do |dimension|
      %tr
        %td= dimension.weight
        %td= dimension.length
        %td= dimension.thickness
        %td
          = button_to 'Destroy', dimension_path(dimension), :method => :delete, :confirm => 'Are you sure?', :class => "btn btn-danger"
