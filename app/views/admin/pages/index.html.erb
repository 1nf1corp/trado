<% content_for :title, t('pages.index.title') %>
<% content_for :breadcrumb, t('pages.index.breadcrumb') %>

<div class="twelvecol">
  <div class="page-header">
    <h2 class="widget widget-header"><%= t('pages.index.header') %></h2>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th><%= t('pages.index.title') %></th>
            <th><%= t('pages.index.sorting') %></th>
            <th><%= t('pages.index.visible') %></th>
            <th><%= t('pages.index.last_updated') %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td>
                <%= page.title %>
              </td>
              <td>
                <%= page.sorting %>
              </td>
              <td>
                <%= page.active ? "<i class='icon-checkmark icon-green'></i>".html_safe : "<i class='icon-close icon-red'></i>".html_safe  %>
              </td>
              <td>
                <%= page.updated_at.strftime('%d/%m/%Y at %I:%M%p') %>
              </td>
              <%= table_actions [:admin, page], 'edit' %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>