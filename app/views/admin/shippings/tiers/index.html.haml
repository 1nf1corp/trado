- content_for :title, 'Shipping tiers'
- content_for :breadcrumb, 'Shipping tiers'

.twelvecol
  .page-header
    = link_to new_admin_shippings_tier_path, :class => "btn btn-blue btn-large" do
      %i.icon-plus
    %h2.widget.widget-header Shipping tiers
  - if @tiers.empty?
    %p You don't have any tiers yet.
  - else
    .table-responsive
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th ID
            %th Length (mm)
            %th Weight (g)
            %th Thickness (mm)
            %th Shipping method(s)
            %th
        %tbody
          - @tiers.each do |tier|
            %tr
              %td= tier.id
              %td
                = tier.length_start
                = '- '
                = tier.length_end
              %td
                = tier.weight_start
                = ' - '
                = tier.weight_end
              %td
                = tier.thickness_start
                = ' - '
                = tier.thickness_end
              %td
                %ul 
                  - tier.shippings.active.each do |shipping|
                    %li
                      = shipping.name
                      = ' - '
                      %b= format_currency shipping.price
              = table_commands tier, tier, edit_admin_shippings_tier_path(tier), admin_shippings_tier_path(tier), 0