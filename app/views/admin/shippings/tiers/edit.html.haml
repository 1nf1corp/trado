- content_for :title, 'Edit shipping method tier'
- content_for :breadcrumb, 'Edit'
- breadcrumb_add 'Shipping methods', admin_shippings_path
- breadcrumb_add 'Tiers', admin_shippings_tiers_path

.eightcol
  .page-header
    %h2.widget.widget-header Edit tier
  = form_for [:admin, :shippings, @tier], :html => { :role => 'form' } do |f|
    - if @tier.errors.any?
      #errors
        %ul
          - @tier.errors.full_messages.each do |msg|
            %li
              %i.icon-cancel-circle
              = msg 
    %fieldset.widget.widget-form.widget-last
      .form-group
        = f.label :length_start
        = f.text_field :length_start, :class => 'form-control'
      .form-group
        = f.label :length_end
        = f.text_field :length_end, :class => 'form-control'
      .form-group
        = f.label :weight_start
        = f.text_field :weight_start, :class => 'form-control'
      .form-group
        = f.label :weight_end
        = f.text_field :weight_end, :class => 'form-control'
      .form-group
        = f.label :thickness_start
        = f.text_field :thickness_start, :class => 'form-control'
      .form-group
        = f.label :thickness_end
        = f.text_field :thickness_end, :class => 'form-control'
      .form-group.form-last
        = f.label 'Shipping methods'
        - if Shipping.active.all.empty? 
          %p No shipping options to select.
        - else
          - Shipping.active.all.each do |shipping|
            .checkbox.blocked
              %label
              = hidden_field_tag "tier[shipping_ids][]", ""
              = check_box_tag "tier[shipping_ids][]", shipping.id, @tier.shipping_ids.include?(shipping.id)
              = shipping.name
              = ' - '
              %b= format_currency shipping.price
    .form-action
      = f.submit 'Submit', :class => 'btn btn-blue'
.fourcol.last