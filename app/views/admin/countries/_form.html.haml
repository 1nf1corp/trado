.row-fluid
  .col-md-6
    = form_for [:admin, @country], :html => { :class => 'form-horizontal', :role => 'form' } do |f|
      %fieldset
        - if @country.errors.any?
          #error_explanation
            %h2= "#{pluralize(@country.errors.count, "error")} prohibited this country from being saved:"
            %ul
              - @country.errors.full_messages.each do |msg|
                %li= msg
        .form-group
          = f.label :name, :class => 'control-label col-md-3'
          .col-md-9
            = f.text_field :name, :class => 'form-control'
        .form-group
          = f.label :language, :class => 'control-label col-md-3'
          .col-md-9
            = f.text_field :language, :class => 'form-control'
        .form-group
          = f.label "ISO 3166-1-alpha-2", :class => 'control-label col-md-3'
          .col-md-9
            = f.text_field :iso, :class => 'form-control'
        .form-group
          .col-md-offset-3.col-md-9
            .checkbox
              %label
                = f.check_box :available
                Available
        .form-group
          .col-md-offset-3.col-md-9
            = f.submit 'Submit', :class => 'btn btn-primary'
