<% content_for :title, 'List products'
   content_for :breadcrumb, 'Products' %>
<div class="page-header">
  <h1>Listing products</h1>
  <%= link_to new_admin_product_path, :class => "btn btn-success" do %>
    <i class="icon-plus"></i>New product
  <% end %>
</div>
<% if @products.empty? %>
  <p>You don't have any products yet.</p>
<% else %>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>SKU</th>
        <th>Part No.</th>
        <th colspan="2">Name</th>
        <th>Price (exc.VAT)</th>
        <th></th>
    </thead>
    <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.sku %>
        </td>
        <td>
          <%= product.part_number %>
        </td>
        <td width="85">
          <%= image_tag product.attachments.first.file.medium, :height => "75", :width => "75" %>
        </td>
        <td>
          <%= product.name %>
        </td>
        <td> 

        </td>
        <td >
          <%= table_commands product, [product.category, product], edit_admin_product_path(product), admin_product_path(product), 0 %>
        </td> 
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>