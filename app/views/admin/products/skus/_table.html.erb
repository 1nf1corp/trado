<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-form">
    <thead>
      <tr>
        <th><%= t('products.form.skus.code') %></th>
        <% @product.variant_types.each do |type| %>
          <th><%= type.name %></th>
        <% end %>
        <th><%= t('products.form.skus.stock') %></th>
        <th><%= t('products.form.skus.cost_value') %></th>
        <th><%= t('products.form.skus.price') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody id="sku-fields">
      <% @skus.each do |sku| %>
        <tr id="sku-<%= sku.id %>">
          <%= render partial: 'admin/products/skus/single', format: [:html], locals: { sku: sku } %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
