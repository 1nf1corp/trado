.row-fluid
  .col-md-6
    = form_for [:admin, :products, :skus, @attribute_type], :html => { :class => 'form-horizontal', :role => 'form' } do |f|
      %fieldset
        - if @attribute_type.errors.any?
          #error_explanation
            %h2= "#{pluralize(@attribute_type.errors.count, "error")} prohibited this attribute type from being saved:"
            %ul
              - @attribute_type.errors.full_messages.each do |msg|
                %li= msg
        .form-group
          = f.label :name, :class => 'control-label col-md-3'
          .col-md-9
            = f.text_field :name, :class => 'form-control'
        .form-group
          = f.label :measurement, :class => 'control-label col-md-3'
          .col-md-9
            = f.text_field :measurement, :class => 'form-control'
        .form-group
        .col-md-offset-3.col-md-9
          = f.submit 'Submit', :class => 'btn btn-primary'

