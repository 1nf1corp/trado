<% content_for :title, 'New Stock' %>
<% content_for :breadcrumb, 'New' %>
<% breadcrumb_add 'Products', admin_products_path %>
<% breadcrumb_add 'Stock Management', admin_products_stock_index_path %>

<%= form_for [:admin, :products, Sku.new], url: admin_products_stock_adjustments_path, method: :post, html: { role: 'form' } do |f| %>
  <div class="twelvecol">
    <div class="page-header">
      <%= add_stock_adjustment_fields "Add Stock", f, :stock_adjustments %>
      <h2 class="widget widget-header">New Stock</h2>
    </div>
    <div class="twelvecol">
      <%= render partial: 'shared/errors', locals: { object: @stock_adjustment } %>
    </div>
    <div class="twelvecol">
      <fieldset class="widget widget-content widget-last">
        <div id="stock_adjustment_fields">
          <%= render partial: 'admin/products/stock_adjustments/fields', locals: { f: f } %>
        </div>
      </fieldset>
      <div class="form-action">
        <%= f.submit 'Submit', :class => 'btn btn-blue btn-large' %>
      </div>
    </div>
</div>
<% end %>
