<div class="attachments <%= 'default' if attachment.default_record %>" id="attachment-<%= attachment.id %>">
  <%= image_tag attachment.file.square, height: 150, width: 150 %>
  <%= link_to admin_product_attachment_path(attachment.attachable, attachment), remote: true, :class => "label label-blue" do %>
    <i class="icon-search"></i>
  <% end %>
  <%= link_to edit_admin_product_attachment_path(attachment.attachable, attachment), remote: true, :class => "label label-green" do %>
    <i class="icon-pencil"></i>
  <% end %>
  <a href="#" data-url="<%= admin_product_attachment_path(attachment.attachable, attachment) %>" class="<%= Store::class_name_id(attachment) %>-delete label label-red">
    <i class="icon-remove"></i>
  </a>
</div>
