<% content_for :title, "Order ##{@order.id}"
content_for :breadcrumb, 'Show'
breadcrumb_add 'All orders', admin_orders_path %>
<div class="row-fluid">
    <div class="span10 offset1">
        <div class="widget-box transparent invoice-box">
            <div class="widget-header widget-header-large">
                <h3 class="grey lighter pull-left position-relative">
                    <i class="icon-shopping-cart green"></i>
                    Customer Order
                </h3>

                <div class="widget-toolbar no-border invoice-info">
                    <span class="invoice-info-label">Order:</span>
                    <span class="red">#<%= @order.id %></span>

                    <br />
                    <span class="invoice-info-label">Date:</span>
                    <span class="blue"><%= @order.created_at.strftime("#{@order.created_at.day.ordinalize} %B %Y ") %></span>
                </div>

                <div class="widget-toolbar hidden-480">
                    <a href="#">
                        <i class="icon-print"></i>
                    </a>
                </div>
            </div>

            <div class="widget-body">
                <div class="widget-main padding-24">
                    <div class="row-fluid"> 
                        <div class="row-fluid">
                            <div class="span6">
                                <div class="row-fluid">
                                    <div class="span12 label label-large label-info arrowed-in arrowed-right">
                                        <b>Billing Address</b>
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <ul class="unstyled spaced">
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Name: 
                                            <b class="red"><%= @order.bill_address.first_name %> <%= @order.bill_address.last_name %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Company: 
                                            <b class="red"><%= @order.bill_address.company %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Address: 
                                            <b class="red"><%= @order.bill_address.address %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            City: 
                                            <b class="red"><%= @order.bill_address.city %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            County: 
                                            <b class="red"><%= @order.bill_address.county %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Postcode: 
                                            <b class="red"><%= @order.bill_address.postcode %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Country: 
                                            <b class="red"><%= @order.bill_address.country %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Telephone: 
                                            <b class="red"><%= @order.bill_address.telephone %></b>
                                        </li>

                                        <li class="divider"></li>
                                    </ul>
                                </div>
                            </div><!--/span-->

                            <div class="span6">
                                <div class="row-fluid">
                                    <div class="span12 label label-large label-success arrowed-in arrowed-right">
                                        <b>Delivery Address</b>
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <ul class="unstyled spaced">
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Name: 
                                            <b class="red"><%= @order.ship_address.first_name %> <%= @order.ship_address.last_name %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            Address: 
                                            <b class="red"><%= @order.ship_address.address %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            City: 
                                            <b class="red"><%= @order.ship_address.city %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            County: 
                                            <b class="red"><%= @order.ship_address.county %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            Postcode: 
                                            <b class="red"><%= @order.ship_address.postcode %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            Country: 
                                            <b class="red"><%= @order.ship_address.country %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            Telephone: 
                                            <b class="red"><%= @order.ship_address.telephone %></b>
                                        </li>
                                    </ul>
                                </div>
                            </div><!--/span-->
                        </div><!--row-->
                        <div class="row-fluid">
                            <div class="span6">
                                <div class="row-fluid">
                                    <div class="span12 label label-large label-warning arrowed-in arrowed-right">
                                        <b>Order information</b>
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <ul class="unstyled spaced">
                                        <li>
                                           <i class="icon-caret-right yellow"></i>
                                           Last updated: 
                                           <%= @order.updated_at.strftime('%d/%m/%Y at %I:%M%p') %>
                                        </li>
                                        <li>
                                           <i class="icon-caret-right yellow"></i>
                                           Transaction ID: 
                                           <%= @order.transaction.transaction_id %>
                                        </li>
                                        <li>
                                           <i class="icon-caret-right yellow"></i>
                                           Transaction type: 
                                           <%= @order.transaction.transaction_type %>
                                        </li>
                                        <li>
                                           <i class="icon-caret-right yellow"></i>
                                           Payment status: 
                                           <%= payment_status @order.transaction.payment_status %>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                           <i class="icon-caret-right yellow"></i>
                                           PayPal fee: 
                                           <%= format_currency @order.transaction.fee unless @order.transaction.fee.nil? %>
                                        </li>
                                    </ul>
                                </div>
                            </div><!--/span-->

                            <div class="span6">
                                <div class="row-fluid">
                                    <div class="span12 label label-large label-danger arrowed-in arrowed-right">
                                        <b>Shipping information</b>
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <ul class="unstyled spaced">
                                    <li>
                                        <i class="icon-caret-right grey"></i>
                                        Email:
                                        <b class="red"><%= @order.email %></b>
                                    </li>
                                    <li>
                                       <i class="icon-caret-right grey"></i>
                                       Shipping type: 
                                       <%= @order.shipping.name %>
                                    </li>
                                    <li>
                                       <i class="icon-caret-right grey"></i>
                                       Shipping status: 
                                       <%= shipping_status @order.shipping_status %>
                                    </li>
                                    <li>
                                        <i class="icon-caret-right grey"></i>
                                        Dispatch date: 
                                        <b class="red"><%= @order.shipping_date.strftime(" #{@order.shipping_date.day.ordinalize} %b %Y") unless @order.shipping_date.nil? %></b>
                                    </li> 
                                    <li class="divider"></li>    
                                    <li>
                                        <i class="icon-caret-right grey"></i>
                                        Actual shipping cost: 
                                        <b class="red"><%= format_currency @order.actual_shipping_cost unless @order.actual_shipping_cost.nil? %></b>
                                    </li>
                                    </ul>
                                </div>
                            </div><!--/span-->
                        </div><!--row-->
                        <div class="space"></div>

                        <div class="row-fluid">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="center">SKU</th>
                                        <th>Product</th>
                                        <th>Description</th>
                                        <th>Quantitiy</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% @order.order_items.each do |item| %>
                                        
                                    
                                    <tr>
                                        <td class="center"><%= item.sku.product.sku %>-<%= item.sku.sku %></td>

                                        <td>
                                            <%= item.sku.product.name %>
                                        </td>
                                        <td>
                                            <%= item.sku.product.description %>
                                        </td>
                                        <td>
                                            <%= item.quantity %>
                                        </td>
                                        <td><%= format_currency item.price %></td>
                                    </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>

                        <div class="hr hr8 hr-double hr-dotted"></div>

                        <div class="row-fluid">
                            <div class="span5 pull-right">
                                <h5 class="pull-right">
                                    Sub total :
                                    <span class="red"><%= format_currency @order.transaction.net_amount %></span>
                                </h5>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span5 pull-right">
                                <h5 class="pull-right">
                                    VAT:
                                    <span class="blue"><%= format_currency @order.transaction.tax_amount %></span>
                                </h4>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span5 pull-right">
                                <h5 class="pull-right">
                                    Shipping:
                                    <span class="orange"><%= format_currency @order.shipping.price %></span>
                                </h4>
                            </div>
                        </div>
                        <div class="hr hr8 hr-double hr-dotted"></div>
                        <div class="row-fluid">
                            <div class="span5 pull-right">
                                <h4 class="pull-right">
                                    Total:
                                    <span class="green"><%= format_currency @order.transaction.gross_amount %></span>
                                </h4>
                            </div>
                        </div>
                        <div class="hr hr8 hr-double hr-dotted"></div>

                        <div class="row-fluid">
                            <div class="span12 well">
                                Thank you for choosing Gimson Robotics.
We believe you will be satisfied by our services.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
