#shipping-form.modal.fade{"aria-hidden" => "true", style: "display: none;", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .widget.widget-blue
        .widget-title
          %h3
            %i.icon-signal
            = "Update shipping: ##{@order.id}"
        .widget-content
          .modal-body
            = form_for [:admin, @order], :html => { :class => 'form-horizontal', :role => 'form', :method => "put" } do |f|
              .form-group
                = f.label :shipping_date, :class => 'control-label col-md-3'
                .col-md-9
                  = f.text_field :shipping_date, :class => 'form-control', 'data-behaviour' => 'datepicker', :autocomplete => 'off', :value => (@order.shipping_date.blank? ? '' : @order.shipping_date.strftime('%d/%m/%Y'))
              .form-group
                .col-md-offset-3.col-md-9
                  = f.submit 'Submit', :class => 'btn btn-primary'
                  %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close