#actual-shipping-cost-form.modal.fade{"aria-hidden" => "true", style: "display: none;", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .widget.widget-blue
        .widget-title
          %h3
            %i.icon-signal
            = "Update actual shipping cost: ##{@order.id}"
        .widget-content
          .modal-body
            = form_for [:admin, @order], :html => { :class => 'form-horizontal', :role => 'form', :method => "put" } do |f|
              .form-group
                = f.label :actual_shipping_cost, :class => 'control-label col-md-3'
                .col-md-9
                  = f.text_field :actual_shipping_cost, :class => 'form-control'
              .form-group
                .col-md-offset-3.col-md-9
                  = f.submit 'Submit', :class => 'btn btn-primary'
                  %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close