- content_for :title, 'Settings'
- content_for :breadcrumb, 'Settings'

.eightcol
  .page-header
    %h2.widget.widget-header Settings
  = form_for @settings, :url => admin_settings_update_path, :html => { :role => 'form' } do |f|
    %fieldset.widget.widget-form.widget-last
      - if @settings.errors.any?
        #error_explanation
          %h2= "#{pluralize(@settings.errors.count, "error")} prohibited these settings from being saved:"
          %ul
            - @settings.errors.full_messages.each do |msg|
              %li= msg  
      .form-group
        = f.label 'Store name'
        = f.text_field :name, :class => 'form-control'
      .form-group
        = f.label 'Store email address'
        = f.text_field :email, :class => 'form-control'
      .form-group
        = f.label :tax_name
        = f.text_field :tax_name, :class => 'form-control'
      .form-group.form-last
        = f.label 'Currency unit'
        = f.text_field :currency, :class => 'form-control'
    .form-action
      = f.submit 'Submit', :class => 'btn btn-blue'
.fourcol.last
