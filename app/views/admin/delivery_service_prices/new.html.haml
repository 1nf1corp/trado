- content_for :title, 'New delivery pricing'
- content_for :breadcrumb, 'New'
- breadcrumb_add 'Delivery services', admin_delivery_services_path
- breadcrumb_add @delivery_service_price.delivery_service.full_name, admin_delivery_service_delivery_service_prices_path

.twelvecol
  .page-header
    %h2.widget.widget-header New delivery pricing
  = form_for @delivery_service_price, url: admin_delivery_service_delivery_service_prices_path(@delivery_service, @delivery_service_price), html: { role: 'form', method: :post } do |f|
    .threecol
    .ninecol.last
      - if @delivery_service_price && @delivery_service_price.errors.any?
        #errors
          %ul
            - @delivery_service_price.errors.full_messages.each do |msg|
              %li
                %i.icon-cancel-circle
                = msg 
    .threecol
      %h3 Delivery price details
      %p Set the code, price and description for this delivery price. 
    .ninecol.last
      %fieldset.widget.widget-content
        .form-group
          = f.label :code
          = f.text_field :code, :class => 'form-control'
        .form-group
          = f.label :price
          = f.text_field :price, :class => 'form-control calculate-tax', autocomplete: 'off'
        .form-group
          = f.label :description
          = f.text_area :description, :class => 'form-control', rows: 7
    .threecol
      %h3 Dimension allowance
      %p Specify the dimension and weight allowance for this delivery price.  
    .ninecol.last
      %fieldset.widget.widget-content.widget-last
        .form-group
          = f.label :min_weight
          = f.text_field :min_weight, :class => 'form-control'
        .form-group
          = f.label :max_weight
          = f.text_field :max_weight, :class => 'form-control'
        .form-group
          = f.label :min_length
          = f.text_field :min_length, :class => 'form-control'
        .form-group
          = f.label :max_length
          = f.text_field :max_length, :class => 'form-control'
        .form-group
          = f.label :min_thickness
          = f.text_field :min_thickness, :class => 'form-control'
        .form-group
          = f.label :max_thickness
          = f.text_field :max_thickness, :class => 'form-control'
      .form-action
        = f.submit 'Submit', :class => 'btn btn-blue btn-large'
.fourcol.last
