.row-fluid
  .col-md-6
    = form_for [:admin, @category], :html => { :class => 'form-horizontal', :role => 'form' } do |f|
      %fieldset
        - if @category.errors.any?
          #error_explanation
            %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
            %ul
              - @category.errors.full_messages.each do |msg|
                %li= msg  
        .form-group
          = f.label :name, :class => 'control-label col-md-3'
          .col-md-9
            = f.text_field :name, :class => 'form-control'
        .form-group
          = f.label :description, :class => 'control-label col-md-3'
          .col-md-9
            = f.text_area :description, :class => 'form-control', :rows => 8
        .form-group
          .col-md-offset-3.col-md-9
            .checkbox
              %label
                = f.check_box :visible
                Visible
        .form-group
          .col-md-offset-3.col-md-9
            = f.submit 'Submit', :class => 'btn btn-primary'