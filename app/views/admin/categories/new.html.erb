<% content_for :title, t('categories.new.title') %>
<% content_for :breadcrumb, t('categories.new.breadcrumb') %>
<% breadcrumb_add t('categories.new.category_index'), admin_categories_path %>

<div class="twelvecol">
  <div class="page-header">
    <h2 class="widget widget-header"><%= t('categories.new.header') %></h2>
  </div>
  <%= form_for [:admin, @category], html: { role: 'form' } do |f| %>
    <div class="threecol"></div>
    <div class="ninecol last">
      <%= render partial: 'shared/errors', locals: { object: @category } %>
    </div>
    <%= render partial: 'form', locals: { f: f } %>
  <% end %>
</div>
