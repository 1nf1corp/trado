- content_for :title, 'New accessory'
- content_for :breadcrumb, 'New'
- breadcrumb_add 'Accessories', admin_accessories_path

.eightcol
  .page-header
    %h2.widget.widget-header New accessory
  = form_for [:admin, @accessory], :html => { :role => 'form' } do |f|
    %fieldset.widget.widget-form.widget-last
      - if @accessory && @accessory.errors.any?
        #error_explanation
          %h2= "#{pluralize(@accessory.errors.count, "error")} prohibited this accessory from being saved:"
          %ul
            - @accessory.errors.full_messages.each do |msg|
              %li= msg  
      .form-group
        = f.label :part_number
        = f.text_field :part_number, :class => 'form-control'
      .form-group
        = f.label :name
        = f.text_field :name, :class => 'form-control'
      .form-group
        = f.label 'Weight (g)'
        = f.text_field :weight, :class => 'form-control'
      .form-group
        = f.label :cost_value
        = f.text_field :cost_value, :class => 'form-control calculate_tax', :autocomplete => 'off'
      .form-group.form-last
        = f.label :price
        = f.text_field :price, :class => 'form-control calculate_tax', :autocomplete => 'off'
    .form-action
      = f.submit 'Submit', :class => 'btn btn-blue'
.fourcol.last
        

