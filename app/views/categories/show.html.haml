%p#notice= notice

%p
    %b Name
    = @category.name

%p
    %b Description
    = @category.description

%p
    %b Products
    - @products.each_slice(3) do |slice|
        .row
            - slice.each do |product|
                .col-3
                    = link_to image_tag(product.image_url), line_items_path(:product_id => product), :method => :post, :remove => true
                    %h3
                        = product.title
                    .price
                        = number_to_currency(product.price, :precision => 2)
                        = link_to 'Add to cart', line_items_path(:product_id => product), :remote => true, :method => 'post', :class => 'btn btn-success btn-small'
                        = link_to 'Find out more', product, :class => 'btn btn-info btn-small'

= link_to 'Edit', edit_category_path(@category)
\|
= link_to 'Back', categories_path
