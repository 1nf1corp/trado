<% content_for :title, '404 Error' %>
<% content_for :breadcrumb, '404' %>

<div class="container">
    <div id="fourzerofour">
        <h1>404</h1>
        <h2>The page you were looking for appears to have been <br>moved, deleted or does not exist.</h2>
        <%= form_tag search_path, method: :get, class: 'new_search', id: 'new_search' do %>
            <div class='form-check-group'>
                <%= text_field_tag(:query, params[:query], autocomplete: 'off', tabindex: "1", id: 'search', placeholder: "Search #{Store.settings.name}" ) %>
            </div>
            <%= submit_tag 'SEARCH', class: 'btn green checkout-button' %>
        <% end %>
    </div>
</div>