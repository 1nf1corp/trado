.row-fluid
  .span-12    
    = form_for @shipping, :html => { :class => 'form-horizontal', :role => 'form'} do |f|
      %fieldset
      - if @shipping.errors.any?
        #error_explanation
          %h2= "#{pluralize(@shipping.errors.count, "error")} prohibited this shipping from being saved:"
          %ul
            - @shipping.errors.full_messages.each do |msg|
              %li= msg
      .control-group
        = f.label :name, :class => 'control-label'
        .controls
          = f.text_field :name, :class => 'form-control'
      .control-group
        = f.label :price, :class => 'control-label'
        .controls
          = f.text_field :price, :class => 'form-control'
      .form-actions
        = button_tag(:type => 'submit', :class => 'btn btn-info') do
          %i.icon-ok
          Submit
