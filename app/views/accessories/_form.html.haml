.row-fluid
  .span-12 
    = form_for @accessory, :html => { :class => 'form-horizontal', :role => 'form' } do |f|
      %fieldset
        - if @accessory.errors.any?
          #error_explanation
            %h2= "#{pluralize(@accessory.errors.count, "error")} prohibited this accessory from being saved:"
            %ul
              - @accessory.errors.full_messages.each do |msg|
                %li= msg
        .control-group
          = f.label :part_number, :class => 'control-label'
          .controls
            = f.text_field :part_number, :class => 'form-control'
        .control-group
          = f.label :name, :class => 'control-label'
          .controls
            = f.text_field :name, :class => 'form-control'
        .control-group
          = f.label :price, :class => 'control-label'
          .controls
            = f.text_field :price, :class => 'form-control'
        .form-actions
          = button_tag(:type => 'submit', :class => 'btn btn-info') do
            %i.icon-ok
            Submit
        
