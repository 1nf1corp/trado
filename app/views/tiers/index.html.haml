- content_for :title, 'List tiers'
- content_for :breadcrumb, 'Tiers'
.page-header
  %h1 Listing tiers
  = link_to new_tier_path, :class => "btn btn-success" do
    %i.icon-plus
    New tier
- if @tiers.empty?
  %p You don't have any tiers yet
- else
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th ID
        %th Length (mm)
        %th Weight (kg)
        %th Thickness (mm)
        %th Shipping option(s)
        %th
    %tbody
      - @tiers.each do |tier|
        %tr
          %td= tier.id
          %td 
            = tier.length_start
            = '- '
            = tier.length_end
          %td
            = tier.weight_start
            = ' - '
            = tier.weight_end
          %td
            = tier.thickness_start
            = ' - '
            = tier.thickness_end
          %td
            %ul 
              - tier.shippings.each do |shipping|
                %li
                  = shipping.name
                  = ' - '
                  %b= format_currency shipping.price
          %td= table_commands tier, edit_tier_path(tier), 1