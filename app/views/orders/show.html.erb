<% content_for :title, "Order ##{@order.id}"
content_for :breadcrumb, 'Show'
breadcrumb_add 'Orders', orders_path %>
<div class="row-fluid">
    <div class="span10 offset1">
        <div class="widget-box transparent invoice-box">
            <div class="widget-header widget-header-large">
                <h3 class="grey lighter pull-left position-relative">
                    <i class="icon-shopping-cart green"></i>
                    Customer Order
                </h3>

                <div class="widget-toolbar no-border invoice-info">
                    <span class="invoice-info-label">Order:</span>
                    <span class="red">#<%= @order.id %></span>

                    <br />
                    <span class="invoice-info-label">Date:</span>
                    <span class="blue"><%= @order.created_at.strftime("#{@order.created_at.day.ordinalize} %B %Y ") %></span>
                </div>

                <div class="widget-toolbar hidden-480">
                    <a href="#">
                        <i class="icon-print"></i>
                    </a>
                </div>
            </div>

            <div class="widget-body">
                <div class="widget-main padding-24">
                    <div class="row-fluid"> 
                        <div class="row-fluid">
                            <div class="span6">
                                <div class="row-fluid">
                                    <div class="span12 label label-large label-info arrowed-in arrowed-right">
                                        <b>Billing Address</b>
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <ul class="unstyled spaced">
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Company: 
                                            <b class="red"><%= @order.billing_company %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Address: 
                                            <b class="red"><%= @order.billing_address %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            City: 
                                            <b class="red"><%= @order.billing_city %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            County: 
                                            <b class="red"><%= @order.billing_county %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Postcode: 
                                            <b class="red"><%= @order.billing_postcode %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Country: 
                                            <b class="red"><%= @order.billing_postcode %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right blue"></i>
                                            Telephone: 
                                            <b class="red"><%= @order.billing_telephone %></b>
                                        </li>

                                        <li class="divider"></li>
                                    </ul>
                                </div>
                            </div><!--/span-->

                            <div class="span6">
                                <div class="row-fluid">
                                    <div class="span12 label label-large label-success arrowed-in arrowed-right">
                                        <b>Delivery Address</b>
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <ul class="unstyled spaced">
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            Address: 
                                            <b class="red"><%= @order.delivery_address %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            City: 
                                            <b class="red"><%= @order.delivery_city %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            County: 
                                            <b class="red"><%= @order.delivery_county %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            Postcode: 
                                            <b class="red"><%= @order.delivery_postcode %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            Country: 
                                            <b class="red"><%= @order.delivery_postcode %></b>
                                        </li>
                                        <li>
                                            <i class="icon-caret-right green"></i>
                                            Telephone: 
                                            <b class="red"><%= @order.delivery_telephone %></b>
                                        </li>    
                                        <li class="divider"></li>
                                         <li>
                                            <i class="icon-caret-right green"></i>
                                            Shipping status: 
                                            <%= shipping_status @order.shipping_status %>
                                         </li>
                                         <li>
                                             <i class="icon-caret-right green"></i>
                                             Dispatch date: 
                                             <b class="red"><%= @order.shipping_date %></b>
                                         </li> 
                                    </ul>
                                </div>
                            </div><!--/span-->
                        </div><!--row-->
                        <div class="row-fluid">
                            <div class="span6">
                                <div class="row-fluid">
                                    <div class="span12 label label-large label-warning arrowed-in arrowed-right">
                                        <b>Payment information</b>
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <ul class="unstyled spaced">
                                        <li>
                                           <i class="icon-caret-right yellow"></i>
                                           Payment status: 
                                           <%= payment_status @order.payment_status %>
                                        </li>
                                    </ul>
                                </div>
                            </div><!--/span-->

                            <div class="span6">
                                <div class="row-fluid">
                                    <div class="span12 label label-large label-danger arrowed-in arrowed-right">
                                        <b>Contact information</b>
                                    </div>
                                </div>

                                <div class="row-fluid">
                                    <ul class="unstyled spaced">
                                    <li>
                                        <i class="icon-caret-right grey"></i>
                                        First name:
                                        <b class="red"><%= @order.first_name %></b>
                                    </li>
                                    <li>
                                        <i class="icon-caret-right grey"></i>
                                        Last name:
                                        <b class="red"><%= @order.last_name %></b>
                                    </li>
                                    <li>
                                        <i class="icon-caret-right grey"></i>
                                        Email:
                                        <b class="red"><%= @order.email %></b>
                                    </li>     
                                    </ul>
                                </div>
                            </div><!--/span-->
                        </div><!--row-->
                        <div class="space"></div>

                        <div class="row-fluid">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="center">SKU</th>
                                        <th>Product</th>
                                        <th>Description</th>
                                        <th>Quantitiy</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% @order.line_items.each do |item| %>
                                        
                                    
                                    <tr>
                                        <td class="center"><%= item.product.sku %></td>

                                        <td>
                                            <%= item.product.title %>
                                        </td>
                                        <td>
                                            <%= item.product.description %>
                                        </td>
                                        <td>
                                            <%= item.quantity %>
                                        </td>
                                        <td><%= format_currency item.product.price %></td>
                                    </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>

                        <div class="hr hr8 hr-double hr-dotted"></div>

                        <div class="row-fluid">
                            <div class="span5 pull-right">
                                <h5 class="pull-right">
                                    Total amount :
                                    <span class="red"><%= format_currency @order.total %></span>
                                </h5>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span5 pull-right">
                                <h5 class="pull-right">
                                    VAT:
                                    <span class="blue"><%= format_currency @order.vat %></span>
                                </h4>
                            </div>
                        </div>
                        <div class="hr hr8 hr-double hr-dotted"></div>
                        <div class="row-fluid">
                            <div class="span5 pull-right">
                                <h4 class="pull-right">
                                    Final total:
                                    <span class="green"><%= format_currency @order.total_vat %></span>
                                </h4>
                            </div>
                        </div>
                        <div class="hr hr8 hr-double hr-dotted"></div>

                        <div class="row-fluid">
                            <div class="span12 well">
                                Thank you for choosing Gimson Robotics.
We believe you will be satisfied by our services.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
