<% content_for :title, 'List orders'
   content_for :breadcrumb, 'Orders' %>
<div class="page-header">
  <h1>Listing orders</h1>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= table_commands order, edit_order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>