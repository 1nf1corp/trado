- content_for :title, "Review your order"

.container
  .row
    / ==========
    / = Main content =
    / ==========
    %section.span12
      .checkout-container
        .row
          .span10.offset1
            / ==========
            / = Header =
            / ==========
            %header
              .row
                .span6.offset2
                  .center-align
                    %h1
                      %span.light Review
                      order
                .span2
                  .right-align
                    = image_tag 'webmarket/buttons/security.jpg', :alt => 'Security', :width => 92, :height => 65
            / ==========
            / = Steps =
            / ==========
            .checkout-steps
              .clearfix
                .step.active
                  .step-badge 1
                  Review order
                .step
                  .step-badge 2
                  Billing address
                .step
                  .step-badge 3
                  Shipping information
                .step
                  .step-badge 4
                  Payment method
                .step
                  .step-badge 5
                  Confirm & pay
            / /steps
            / ==========
            / = Selected Items =
            / ==========
            
            - if @cart.line_items.empty?
              .table.table-items
                %h4 Your cart is empty
            - else
              %table.table.table-items
                %thead
                  %tr
                    %th{colspan: "2"} Item
                    %th
                      .align-center Quantity
                    %th
                      .align-right Price
                %tbody
                  - @cart.line_items.each do |item|
                    %tr
                      %td.image
                        = image_tag item.product.attachments.first.file.medium, :alt => item.product.name, :height => 124, :width => 124
                      %td.desc
                        = item.product.name
                        = link_to item, :method => :delete, :remote => true, :title => 'Remove item' do
                          %i.icon-remove-sign
                        %div= "#{item.attribute_value}#{item.attribute_measurement unless item.attribute_measurement.nil? }"
                      %td.qty
                        = form_for item, :remote => true do |f|
                          = f.text_field :quantity, :value => item.quantity, :class => 'tiny-size'
                      %td.price= format_currency item.price
                  %tr
                    %td{colspan: "2", rowspan: "2"}
                      .alert.alert-info
                        Shipping cost will be calculated later in the order process.
                  %tr
                    %td.stronger Subtotal:
                    %td.stronger
                      .size-16.align-right.total_price= format_currency @cart.total_price
            %hr/
            - unless @cart.line_items.empty?
              %p.right-align
                In the next step you will choose your billing address    
                %a.btn.higher.bold#update_quantity UPDATE
                = link_to "CONTINUE", next_wizard_path, :class => 'btn btn-primary higher bold'
    / /main content
/ /container