- content_for :title, 'Select a shipping method'
- if @order.errors.any?
  #error_explanation
    %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
    %ul
      - @order.errors.full_messages.each do |msg|
        %li= msg
.container
  .row
    / ==========
    / = Main content =
    / ==========
    %section.span12
      .checkout-container
        .row
          .span10.offset1
            / ==========
            / = Header =
            / ==========
            %header
              .row
                .span6.offset2
                  .center-align
                    %h1
                      %span.light Billing
                      address
                .span2
                  .right-align
                    = image_tag 'webmarket/buttons/security.jpg', :alt => 'Security', :width => 92, :height => 65
            / ==========
            / = Steps =
            / ==========
            .checkout-steps
              .clearfix
                .step.done
                  .step-badge
                    %i.icon-ok
                  = link_to 'Review order', wizard_path(:review)
                .step.done
                  .step-badge
                    %i.icon-ok
                  = link_to 'Billing addresss', wizard_path(:billing)
                .step.active
                  .step-badge 3
                  Shipping information
                .step
                  .step-badge 4
                  Payment method
                .step
                  .step-badge 5
                  Confirm & pay
            / /steps
            / ==========
            / = Shipping addr form =
            / ==========
            = form_for @order, :url => wizard_path, :html => { :method => :put, :class => 'form-horizontal form-checkout' } do |f|
              .control-group
                = f.label :shipping_first_name, :class => 'control-label' do
                  First name
                  %span.red-clr.bold *
                .controls
                  = f.text_field :shipping_first_name, :class => 'span4', :id => 'shipping_first_name'
              .control-group
                = f.label :shipping_last_name, :class => 'control-label' do
                  Last name
                  %span.red-clr.bold *
                .controls
                  = f.text_field :shipping_last_name, :class => 'span4', :id => 'shipping_last_name'
              .control-group
                = f.label :email, :class => 'control-label' do
                  Email
                  %span.red-clr.bold *
                .controls
                  = f.text_field :email, :class => 'span4', :id => 'email'
              .control-group
                = f.label :shipping_telephone, :class => 'control-label' do
                  Telephone
                .controls
                  = f.text_field :shipping_telephone, :class => 'span4', :id => 'shipping_telephone'
              .control-group
                = f.label :shipping_company, :class => 'control-label' do
                  Company
                .controls
                  = f.text_field :shipping_company, :class => 'span4', :id => 'shipping_company'
              .control-group
                = f.label :shipping_address, :class => 'control-label' do
                  Street address
                  %span.red-clr.bold *
                .controls
                  = f.text_field :shipping_address, :class => 'span4', :id => 'shipping_address'
              .control-group
                = f.label :shipping_city, :class => 'control-label' do
                  City
                  %span.red-clr.bold *
                .controls
                  = f.text_field :shipping_city, :class => 'span4', :id => 'shipping_city'
              .control-group
                = f.label :shipping_postcode, :class => 'control-label' do
                  Postcode
                  %span.red-clr.bold *
                .controls
                  = f.text_field :shipping_postcode, :class => 'span4', :id => 'shipping_postcode'
              .control-group
                = f.label :shipping_county, :class => 'control-label' do
                  County
                .controls
                  = f.text_field :shipping_county, :class => 'span4', :id => 'shipping_county'
              .control-group
                = f.label :shipping_country, :class => 'control-label' do
                  Country
                  %span.red-clr.bold *
                .controls
                  = f.select :shipping_country, options_for_select(Country.all.map { |country| [country.name, country.id ] }), :class => 'as-span4', :id => 'shipping_country', :prompt => 'Please select..'
              .shipping-methods{ 'data-tier' => "#{@calculated_tier}" }
                - if defined?(@shipping_options)
                  - if @shipping_options.empty?
                    .row-fluid
                      %p There are no shipping options available
                  - else
                    - @shipping_options.each_slice(3) do |slice|
                      .row-fluid
                        - slice.each do |shipping|
                          .span4
                            .box.highlight.shipping_option
                              .hgroup.title
                                %h3= shipping.name
                                %h5= shipping.description
                              .box-content.highlight
                                .price
                                  %strong= format_currency shipping.price
                                = f.radio_button :shipping_id, shipping.id
              %hr/
              %p.right-align
                In the next step you will choose a payment method
                = f.submit 'CONTINUE', :class => 'btn btn-primary higher bold'
    / /main content
/ /container
