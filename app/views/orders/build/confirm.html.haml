- content_for :title, 'Confirm your order'

.container
  .row
    / ==========
    / = Main content =
    / ==========
    %section.span12
      .checkout-container
        .row
          .span10.offset1
            / ==========
            / = Header =
            / ==========
            %header
              .row
                .span6.offset2
                  .center-align
                    %h1
                      %span.light Confirm
                      \& Pay
                .span2
                  .right-align
                    = image_tag 'webmarket/buttons/security.jpg', :alt => 'Security', :width => 92, :height => 65
            / ==========
            / = Steps =
            / ==========
            .checkout-steps
              .clearfix
                .step.done
                  .step-badge
                    %i.icon-ok
                  = link_to 'Review order', wizard_path(:review)
                .step.done
                  .step-badge
                    %i.icon-ok
                  = link_to 'Billing address', wizard_path(:billing)
                .step.done
                  .step-badge
                    %i.icon-ok
                  = link_to 'Shipping information', wizard_path(:shipping)
                .step.done
                  .step-badge
                    %i.icon-ok
                  = link_to 'Payment method', wizard_path(:payment)
                .step.active
                  .step-badge 5
                  Confirm & Pay
            / /steps
            / ==========
            / = Selected Items =
            / ==========
            %table.table.table-items
              %thead
                %tr
                  %th{colspan: "2"} Item
                  %th
                    .align-center Quantity
                  %th
                    .align-right Price
              %tbody
                - @cart.line_items.each do |item|
                  %tr
                    %td.image
                      = image_tag item.product.attachments.first.file.medium, :alt => item.product.name, :height => 124, :width => 124
                    %td.desc
                      = item.product.name
                    %td.qty= item.quantity
                    %td.price= format_currency item.price
                %tr
                  %td{colspan: "2", rowspan: "2"}
                  \ 
                  %td.stronger Shipping:
                  %td.stronger
                    .align-right= format_currency @order.shipping_cost
                %tr
                  %td{colspan: "2", rowspan: "2"}
                  \ 
                  %td.stronger VAT:
                  %td.stronger
                    .align-right= format_currency @order.vat
                %tr
                  %td{colspan: "2", rowspan: "2"}
                  \ 
                  %td.stronger Subtotal:
                  %td.stronger
                    .align-right= format_currency @order.sub_total
                %tr
                  %td.stronger Total:
                  %td.stronger
                    .size-16.align-right.total_price= format_currency @order.total
            %p.right-align  
              = link_to 'CONFIRM & PAY', next_wizard_path, :class => 'btn btn-primary higher bold'
    / /main content
/ /container