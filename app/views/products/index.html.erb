<div class="page-header">
  <h1>Listing products</h1>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Price</th>
      <th>Weighting</th>
      <th>Stock</th>
      <th>Category</th>
      <th>Accessories</th>
      <th>Actions</th>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.id %>
      </td>
      <td>
        <%= link_to image_tag(product.image_url.medium), product %>
      </td>
      <td>
        <%= link_to product.title, product %>
      </td>
      <td>
        <%= product.price %>
      </td>
      <td>
        <%= product.weighting %>
      </td>
      <td>
        <%= product.stock %>
      </td>
      <td>
        <% product.categories.each do |category| %>
          <li><%= category.name %></li>
        <% end %>
      </td>
      <td>
        <% product.additional_options.each do |option| %>
          <li><%= option.name %></li>
        <% end %>
      </td>
      <td >
        <%= link_to 'Edit', edit_product_path(product), :class => "btn btn-success" %><br/>
        <%= link_to 'Destroy', product, 
                    :confirm => 'Are you sure?',
                    :method => :delete, :class => "btn btn-danger" %>
      </td> 
    </tr>
  <% end %>
  </tbody>
</table>
