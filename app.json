{
  "name": "Trado",
  "description": "Set up the Trado ecommerce platform.",
  "keywords": [
    "ecommerce",
    "Rails",
    "Ruby"
  ],
  "website": "http://www.trado.io",
  "repository": "https://github.com/Jellyfishboy/trado",
  "logo": "http://cdn0.trado.io/trado-promo/assets/img/thumbnail.png",
  "success_url": "/welcome",
  "scripts": {
    "postdeploy": "bundle exec rake trado:install"
  },
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "WEB_CONCURRENCY": {
      "description": "The number of processes to run.",
      "value": "5"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "image": "heroku/ruby",
  "addons": [
    {
      "plan": "heroku-redis:hobby-dev"
    },
    {
      "plan": "heroku-postgresql:hobby-dev",
      "options": {
        "version": "9.5"
      }
    },
    {
      "plan": "memcachier:dev"
    },
    {
      "plan": "rollbar:free"
    },
    {
      "plan": "sendgrid:starter"
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/stomita/heroku-buildpack-phantomjs"
    }
  ]
}